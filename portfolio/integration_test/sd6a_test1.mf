#INCLUDE defines.mf
#DEFINE MESSAGE_PERIOD 10ms

; Preconditions, car is at hallway 1, floor FRONT
; doors are closed
; Elevator is moving UP
0s I MESSAGE_PERIOD N DOOR_CLOSED_SENSOR_[FRONT][RIGHT]_CAN_ID DoorClosed FRONT RIGHT = True
0s I MESSAGE_PERIOD N DOOR_CLOSED_SENSOR_[FRONT][LEFT]_CAN_ID DoorClosed FRONT LEFT = True
0s I MESSAGE_PERIOD N DOOR_CLOSED_SENSOR_[BACK][RIGHT]_CAN_ID DoorClosed BACK RIGHT = True
0s I MESSAGE_PERIOD N DOOR_CLOSED_SENSOR_[BACK][LEFT]_CAN_ID DoorClosed BACK LEFT = True
0s I MESSAGE_PERIOD N AT_FLOOR_[1][FRONT]_CAN_ID AtFloor 1 FRONT = True
; Elevator is not at desired floor
0s I MESSAGE_PERIOD N DESIRED_FLOOR_CAN_ID DesiredFloor = 2 UP BACK
; Start moving the elevator
+50ms I  MESSAGE_PERIOD N AT_FLOOR_[1][FRONT]_CAN_ID AtFloor 1 FRONT = False

;#Arc6A/1a
+50ms I MESSAGE_PERIOD N AT_FLOOR_[2][BACK]_CAN_ID AtFloor 2 BACK = True
;#Arc6A/1b
+51ms A F CarPositionIndicator : floor == 2
;#Arc6A/2a
+50ms A F Drive : direction == UP
+0ms A F Drive : speed == LEVEL

;#Arc6A/2b
+10ms I MESSAGE_PERIOD N LEVEL_SENSOR_[UP]_CAN_ID Leveling UP = True

;#Arc6A/2c
+10ms I MESSAGE_PERIOD N LEVEL_SENSOR_[DOWN]_CAN_ID Leveling DOWN = True

;#Arc6A/2d
+50ms A F Drive : direction == STOP
+0ms A F Drive : speed == STOP

